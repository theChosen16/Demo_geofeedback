# ============================================================================
# Variables de Entorno - API GeoFeedback Papudo
# ============================================================================
# Copiar a .env y configurar con valores reales para desarrollo local
# En Railway, configurar estas variables en el dashboard

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (Railway PostgreSQL)
# Estas variables son provistas automáticamente por Railway cuando creas un servicio PostgreSQL
# No necesitas configurarlas manualmente en Railway
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geofeedback_papudo
DB_USER=geofeedback
DB_PASSWORD=your-secure-password-here

# CORS Configuration
# En producción, especificar el dominio exacto del frontend
CORS_ORIGINS=*

# API Configuration
API_TITLE=GeoFeedback Papudo API
API_VERSION=1.0.0
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=INFO

# Server Configuration (para Gunicorn)
WORKERS=4
TIMEOUT=120
BIND_ADDRESS=0.0.0.0:5000
